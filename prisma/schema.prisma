// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id           Int        @id @default(autoincrement())
  uuId         String     @default(uuid())
  createdAt    DateTime   @default(now())
  fullName     String
  abbreviation String
  yearFounded  Int
  nbaApiId     Int        @unique
  addressCity  String
  addressState String
  nickName     String
  logoUrl      String
  TeamGame     TeamGame[]
}

model TeamGame {
  AST               Int?
  BLK               Int?
  DREB              Int?
  FG3A              Int?
  FG3M              Int?
  FG3_PCT           Float?
  FGA               Int?
  FGM               Int?
  FG_PCT            Float?
  FTA               Int?
  FTM               Int?
  FT_PCT            Float?
  GAME_DATE         String
  GAME_ID           String
  MATCHUP           String
  MIN               Int?
  OREB              Int?
  PF                Int?
  PLUS_MINUS        Float?
  PTS               Int?
  REB               Int?
  SEASON_ID         String
  STL               Int?
  TEAM_ABBREVIATION String
  TEAM_ID           Int
  TEAM_NAME         String
  TOV               Int?
  WL                String?
  id                Int      @id @default(autoincrement())
  uuId              String   @default(uuid())
  nbaApiId          String
  teamId            Int
  createdAt         DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id])

  @@unique([teamId, nbaApiId])
}
